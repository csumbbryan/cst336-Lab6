<%- include("partials/header.ejs") %>

  <div class="subheader">Updating Author Data</div>
  <div class="hr"><hr></div>
    <div class="content">

    <form method="POST" action="/author/edit">

      <img src="<%=authorInfo[0].portrait%>" width="200"><br>
      <input type="hidden" name="authorId" value="<%=authorInfo[0].authorId%>">

      First Name:
      <input type="text" name="fName" value="<%=authorInfo[0].firstName%>">
      <br>

      Last Name:
      <input type="text" name="lName" value="<%=authorInfo[0].lastName%>">
      <br>

      Date of Birth:
      <input type="date" name="dob"  value="<%=authorInfo[0].dobISO%>">
      <br>
      Date of Death: 
      <input type="date" name="dod" value="<%=authorInfo[0].dodISO%>">
      <br>

      Sex:  
        <input type="radio" name="sex" value="M" 
        <% if (authorInfo[0].sex == "M") { %>
          checked 
        <% } %>
        > Male

        <input type="radio" name="sex" value="F" 
        <% if (authorInfo[0].sex == "F") { %>
          checked 
        <% } %>
        > Female
        <br>

      Profession: 
        <input type="text" name="profession" value="<%=authorInfo[0].profession%>">
      <br>
      Country: 
        <input type="text" name="country" value="<%=authorInfo[0].country%>">
      <br>
      Portrait Image: 
        <input type="text" name="portrait" value="<%=authorInfo[0].portrait%>">
      <br>
      Biography:<br> 
        <textarea cols="40" rows="5" name="biography"><%=authorInfo[0].biography%></textarea>
      <br>
      
      <button class="addUpdate">Update Author</button>
      

    </form>          
    <br>

    <% if (typeof message != "undefined") { %>
      <h3><%=message%></h3>
    <% } %>
    </div>
<%- include("partials/footer.ejs") %>
